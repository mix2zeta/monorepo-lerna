{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "ES2021",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@shared/*": [
                "../../../shared/*"
            ],
            "@interface/*": [
                "interface/*"
            ],
        }
    },
    "include": [
        "./src/**/*",
        "../../shared/**/*",
    ],
}