{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,

        "importHelpers": true,
        "composite": true,
        "target": "es2020",
        "module": "CommonJS",
        "esModuleInterop": true,
    }
}
